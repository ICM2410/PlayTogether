<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="8dp"
    android:insetRight="8dp">

    <layer-list>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <!-- Background color -->
                <corners android:radius="8dp" />
                <!-- Adjust the radius as per your requirement for rounded corners -->
            </shape>
        </item>
        <item android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
                <!-- Border color -->
                <stroke android:width="1dp" android:color="#33000000" />
                <!-- Border width and color, #33 represents 20% alpha (transparency) -->
                <corners android:radius="8dp" />
                <!-- Adjust the radius to match the rounded corners of the background -->
            </shape>
        </item>
    </layer-list>
</inset>
